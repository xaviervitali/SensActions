<form method="post" action="{{ path('app_formation_delete', {'id': formation.id}) }}" onsubmit="return confirm('Êtes vous sûre de vouloir supprimer la formation '{{ formation.name }}' ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ formation.id) }}">
    <button class="btn btn-danger btn-sm">Supprimer la formation "{{ formation.name }}"</button>
</form>
