    <div class="tab-content" id="myTabContent">
      <div
        class="tab-pane fade show active p-lg-5 p-2 "
        id="objectif-tab-pane"
        role="tabpanel"
        aria-labelledby="objectif-tab"
        tabindex="0"
      >
 {{ formation.goal}}
      </div>
      <div
        class="tab-pane fade p-lg-5 p-2 "
